<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />
	<meta http-equiv="content-language" content="{{ page.seoLang }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}
</head>
<body class="{{ page.backgroundClass }}">

	{% block content %}
	{% endblock %}
	{% include basekit.bodyScript %}

<!-- jQuery -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>

<script>
$(document).ready(function(){
     $('.folder-toggle').click( function(){
        if ( $(this).hasClass('folder-open') ) {
            $(this).removeClass('folder-open');
        } else {
            $('.folder-toggle.folder-open').removeClass('folder-open');
            $(this).addClass('folder-open');    
        }
    });
});
</script>

<script>
    $(document).on('mq4hsChange', function (e) {
        $(document.documentElement).toggleClass('no-touch', e.trueHover);
    });
</script>
<script src="{{asset('js/mq4-hover-shim.js')}}"></script>

</body>
</html>
